<build>
	<projectname>KoloroKo</projectname>
	<title>Koloro Ko</title>
	<description>Color me.</description>

	<crayonpath>D:\Documents\programming\crayon\TwoCansSDK</crayonpath>
	<source>source</source>
	<compilerlocale>en</compilerlocale>
	<output>output/%TARGET_NAME%</output>

	<imagesheets>
		<sheet id="twocans_everything">
			<prefix>*</prefix>
		</sheet>
	</imagesheets>
	
	<guidseed>com.jsharman.KoloroKo,v1,%TARGET_NAME%</guidseed>

    <var type="string">
      <id>game_title</id>
      <value>Koloro Ko</value>
    </var>
    
    <var type="string">
      <id>initial_scene</id>
      <value>MainScene</value>
    </var>
    
    <var type="integer">
      <id>screen_width</id>
      <value>640</value>
    </var>
    
    <var type="integer">
      <id>screen_height</id>
      <value>240</value>
    </var>
	
    <var type="boolean">
      <id>use_60_fps</id>
      <value>false</value>
    </var>
	
    <var type="boolean">
      <id>enable_wasd</id>
      <value>true</value>
    </var>
	
	<target name="csharp">
		<platform>csharp-app</platform>
	</target>
	
	<target name="java">
		<platform>java-app</platform>
	</target>
	
	<target name="python">
		<platform>python-app</platform>
	</target>
	
	<target name="ios">
		<platform>javascript-app-ios</platform>
	</target>
	
	<target name="javascript">
		<platform>javascript-app</platform>
		<jsfileprefix>/website/relative/path/from/domain/root</jsfileprefix>
	</target>
</build>